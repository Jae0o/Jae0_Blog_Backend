{
  "endOfLine": "lf",
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "singleAttributePerLine": true,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "trailingComma": "all",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",

  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "express",
    "dotenv",

    "^@middleware",
    "^@",

    "^[../]",
    "^[./]",

    "<THIRD_PARTY_MODULES>"
  ],
  "importOrderSortSpecifiers": true,
  "importOrderSeparation": true
}
