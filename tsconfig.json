{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",

    "strict": true,

    "allowJs": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "outDir": "./dist"
  },
  "exclude": ["node_modules", "dist", "client"]
}
