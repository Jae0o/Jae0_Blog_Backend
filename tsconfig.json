{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,

    "allowJs": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "outDir": "./dist",

    "baseUrl": "src/.",
    "paths": {
      "@middlewares/*": ["middlewares/*"],
      "@/*": ["*"]
    }
  },
  "exclude": ["node_modules", "dist", "client"]
}
