{
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "dynamicImport": true,
      "decorators": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "target": "esnext",
    "externalHelpers": false,
    "keepClassNames": true,
    "loose": false,
    "minify": {
      "compress": false,
      "mangle": false
    },

    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@middlewares/*": ["./middlewares/*"],
      "@middlewares": ["./middlewares/index"],

      "@constants/*": ["./constants/*"],
      "@constants": ["./constants/index"],

      "@services/*": ["./services/*"],
      "@services": ["./services/index"],

      "@controllers/*": ["./controllers/*"],
      "@controllers": ["./controllers/index"],

      "@utils/*": ["./utils/*"],
      "@utils": ["./utils/index"],

      "@config/*": ["./config/*"],
      "@config": ["./config/index"],

      "@routes/*": ["./routes/*"],
      "@routes": ["./routes/index"],

      "@interfaces/*": ["./interfaces/*"],
      "@interfaces": ["./interfaces/index"]
    }
  },
  "module": {
    "type": "commonjs"
  }
}
